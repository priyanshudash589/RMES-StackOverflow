<%- include('partials/header', { pageTitle: 'Error' }) %>

<div class="flex-1 w-full max-w-[1600px] mx-auto px-4 lg:px-10 py-6">
    <div class="flex flex-col items-center justify-center py-24">
        <span class="material-symbols-outlined text-8xl text-red-500 mb-6">error</span>
        <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">Oops! Something went wrong</h1>
