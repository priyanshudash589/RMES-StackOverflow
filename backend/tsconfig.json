{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@entities/*": [
                "./entities/*"
            ],
            "@repositories/*": [
                "./repositories/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@middleware/*": [
                "./middleware/*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@types/*": [
                "./types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}